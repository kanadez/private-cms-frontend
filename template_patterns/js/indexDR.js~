function getAssocArrayLength(tempArray) 
{
   var result = 0;
   for (tempValue in tempArray) 
   {
      result++;
   }
	
   return result;
}

var receiving_patterns_count = 0;

function receivePatternPrepare() // подготовка к получению готового шаблона с сервера. Происходит по нажатию кнопки получения и перед интервалом загрузки шаблона с сервера
{
   var SP_count = 2; // число выбранных паттернов, получается с сервера
   
   if ($('li.SP').length != 0) // удаляем все открытые паттерны, т.к. всегда работаем только с одним шаблоном. Множество шаблонов предусмотрено, но не предусмотрена функция переключения между ними (в данной версии приложения)
   {
      $('li.SP').remove();
   }
   aGlobal = []; // обнуляем массив, т.к. всегда работаем только с одним паттерном
   counter = 0;
   for (var i = 0; i < SP_count; i++)
   {
      addPattern(i);
   }
   
   receiving_patterns_count = SP_count;
   pattern_receiving = 3;
   
}
